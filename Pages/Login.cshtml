@page
@model TwitterClient.Pages.LoginModel
@{
	ViewData["Title"] = "login to you account";
}


	<section class="login-page" style="display:grid">
    <!-- login page nav -->
    <nav class="login-page-nav">
        <ul>
            <li class="brand"><a href="#"><i class="fas fa-dove"></i></a></li>
            <li><a href="#">Home</a></li>
            <li><a href="#">About</a></li>
            <li><a href="#">Language: English</a></li>
        </ul>
    </nav>
    <!-- end of login page nav -->
    <!-- login -->
    <div class="login">
        <div class="login-content">
            <h2>Log in to Twirrer</h2>
            <form class="login-form" method="post">
                <input type="text" placeholder="Phone, email, or username" asp-for="signUpModel.username" class="login-user-info">
                <input type="password" placeholder="Password" class="login-password" asp-for="signUpModel.password">
                <div>
                    <button type="submit" onclick="login()" class="login-form-btn">Log In</button>
                   
                </div>
            </form>
        </div>
        <footer class="login-footer">
            <p>New to Twirrer? <a href="signup">Sign up now</a></p> 
        </footer>
    </div>
    <!-- end of login -->
    <!-- login modal -->
    <div class="login-modal">
        <i class="fas fa-times"></i>
        <p>The username and password you entered did not match our records. Please, double check and try again</p>
    </div>

    <!-- end of login modal -->
</section>
<script>
	function login() {
		const loginModal = document.querySelector('.login-modal');
    const inputUserInfo = document.querySelector('.user-info');
    const inputPassword = document.querySelector('.password');

    if (inputUserInfo.value === "" && inputPassword.value === "") {
          loginModal.style.display = 'block';
    }
	 
});
</script>